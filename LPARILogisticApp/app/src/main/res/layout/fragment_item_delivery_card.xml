<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item_delivery"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardElevation="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFECB3">

        <ImageView
            android:id="@+id/ivItem1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/clockicon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivItem1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:text="Monitor"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#1976D2"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_marginLeft="4dp"
            android:text=" Category :     Glass Item"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvItemCategory"
            android:layout_alignLeft="@+id/tvItemCategory"
            android:maxLines="2"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:text="Handle with care - Handle with care - Handle with care - Handle with care "
            android:textColor="#666"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tvCtPhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstructions"
            android:layout_alignLeft="@id/tvInstructions"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:text="Needs Scanning before proceed"
            android:textColor="#E91E63"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
