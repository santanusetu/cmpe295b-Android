<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--FIRST LAYOUT-->
        <LinearLayout
            android:id="@+id/llGray"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green_header"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/green_header"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/down_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_header"
                android:padding="10dp"
                android:text=" Priority Based Shipments (Percentage) "
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart4"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="200dp" />


        <!--END OF FIRST GRAPH-->


        <!--SECOND GRAPH-->
        <LinearLayout
            android:id="@+id/llGreen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorLoginTwo"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorLoginTwo"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/down_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLoginTwo"
                android:padding="10dp"
                android:text=" Item wise Package Loss "
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"/>

        <!--END OF SECOND GRAPH-->



        <LinearLayout
            android:id="@+id/llOrange"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorButton"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorButton"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/down_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton"
                android:padding="10dp"
                android:text=" Different Types of Delivery"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"/>

        <!--END THREE-->

        <LinearLayout
            android:id="@+id/llRed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorLoginTwo"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorLoginTwo"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/down_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLoginTwo"
                android:padding="10dp"
                android:text=" Alert Zone Delivery v/s Safe Zone Delivery "
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="200dp" />



    </LinearLayout>
</ScrollView>